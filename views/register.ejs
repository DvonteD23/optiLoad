<%- include('partials/header', { title:'Register' }) %>

<main class="auth-section container">
  <form id="register-form" class="auth-form" action="/register" method="POST">
    <h2>Register</h2>
    <div class="form-group">
      <label for="first-name">First Name</label>
      <input type="text" id="first-name" name="firstName" autocomplete="given-name" required />
    </div>
    <div class="form-group">
      <label for="last-name">Last Name</label>
      <input type="text" id="last-name" name="lastName" autocomplete="family-name" required />
    </div>
    <div class="form-group">
      <label for="register-email">Email</label>
      <input type="email" id="register-email" name="email" autocomplete="email" required />
    </div>
    <div class="form-group">
      <label for="register-password">Password</label>
      <input type="password" id="register-password" name="password" autocomplete="new-password" required />
    </div>
    <div class="form-group">
      <label for="company">Company</label>
      <input type="text" id="company" name="company" autocomplete="organization" required />
    </div>
    <div class="form-group">
      <label for="vehicle-type">Vehicle Type</label>
      <select id="vehicle-type" name="vehicleType" autocomplete="off" required>
        <option value="">Select</option>
        <option value="van">Van</option>
        <option value="box truck">Box Truck</option>
        <option value="flat bed">Flat Bed</option>
        <option value="tow truck">Tow Truck</option>
        <option value="semi">Semi</option>
      </select>
    </div>
    <div class="form-group">
      <label for="vehicle-length">Vehicle Length</label>
      <input type="number" id="vehicle-length" name="vehicleLength" min="0" autocomplete="off" required />
    </div>
    <button type="submit">Register</button>
    <% if (message) { %>
      <p style="color:red;"><%= message %></p>
    <% } %>
    <p>Already have an account? <a href="/login">Login</a></p>
  </form>
</main>

<%- include('partials/footer') %>
