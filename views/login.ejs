<%- include('partials/header', { title:'Login' }) %>

<main class="auth-section container">

  <!-- App overview panel -->
  <section class="app-summary">
    <h2>About OptiLoad</h2>
    <p>
      OptiLoad is a third-party logistics platform that integrates seamlessly with your company's existing software and database. 
      Based in Boston and founded in 2025, we provide dynamic load matching, real-time tracking, and automated rate calculations to 
      streamline your freight operations.
    </p>
  </section>

  <form id="login-form" class="auth-form" action="/login" method="POST">
    <h2>Login</h2>
    <div class="form-group">
      <label for="login-email">Email</label>
      <input type="email" id="login-email" name="email" autocomplete="email" required />
    </div>
    <div class="form-group">
      <label for="login-password">Password</label>
      <input type="password" id="login-password" name="password" autocomplete="current-password" required />
    </div>
    <button type="submit">Login</button>
    <% if (message) { %>
      <p style="color:red;"><%= message %></p>
    <% } %>
    <p>Don't have an account? <a href="/register">Register</a></p>
  </form>
</main>

<%- include('partials/footer') %>
